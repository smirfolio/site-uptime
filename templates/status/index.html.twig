{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
    <h1>Site Status {{ site }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status code</th>
                <th>Latency</th>
                <th>Time Stamp</th>
            </tr>
        </thead>
            <tbody>
            {% for statusDetail in status %}
                <tr>
                    <td>{{ statusDetail.id }}</td>
                    <td>{{ statusDetail.status }}</td>
                    <td>{{ statusDetail.latency }}</td>
                    <td>{{ statusDetail.timeStamp|date('d-m-Y H:i:s') }}</td>
                    <td>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
    </table>
    <a href="{{ path('app_sites_index') }}">back to Sites</a>
{% endblock %}
